{
    "app":{
        "name": "Lead",
        "ajax":null,
        "paths":{
            "*":"http://localhost/lead/node/",
            "api": "http://localhost/lead/node/api/",
            "sql": "http://localhost/lead/node/model/sql/",
            "redis": "http://localhost/lead/node/model/redis/"
        }
    },
    "mods":{
        "mainDb":{
            "mod":"mysql",
            "database":"lead",
            "instance":"small",
            "character":"utf8_general_ci",
            "collate":"utf8_bin"
        },
		"mainFs":{
            "mod":"fsdb",
            "instance":"small",
			"root":"directory",
			"nameLength":3
		},
        "mainCache":{
            "mod":"redis",
            "instance":"small",
			"database":0,
            "options":{}
        },
        "pubsub":{
            "mod":"redis",
            "instance":"small",
			"database":0,
			"subscribe":[
				"lead/broadcast"
			],
            "options":{}
        },
        "webServer":{
            "mod":"web",
            "allowOrigin":"*",
            "delimiter":["&"],
            "uploadWL":[]
        }
    },
    "mysql":{
        "remarks":"use json schema validator, https://github.com/epoberezkin/ajv",
		"mainFs":{
			"directory":{
				"meta":"map"
			}
		},
		"mainCache":{
			"directory":{
				"string":{
					"uid":["expiry","session"]
				}
			}
		},
        "mainDb":{
            "user":{
                "un":["VARCHAR(16)"],
                "sess":["VARCHAR(32)"],
                "name":["VARCHAR(32)"],
                "pwd":["INT"],
                "role":["ENUM","consumer","agent","admin"],
                "$profile":["TEXT"],
				"UNIQUE":["un"],
				"INDEX":["sess","role"]
            },
			"device":{
                "userId":["FOREIGN","user"],
				"os":["ENUM","android","ios"],
				"token":["VARCHAR(4096)"],
				"INDEX":["userId"]
			},
            "case":{
				"userId":["FOREIGN","user"],
				"$detail":["TEXT"],
                "lockId":["INT"],
				"INDEX":["userId"]
            },
            "lock":{
				"userId":["FOREIGN","user"],
				"name":["VARCHAR(32)"],
				"$addr":["TEXT"],
                "passcode":["INT"],
                "salt":["INT"],
				"INDEX":["userId","name"]
            }
        },
		"CONFIG_NAME, which define db name":{
			"TABLE_NAME":{
				"KEY":["VALUE_TYPE","UNIQUE","NOT NULL"],
				"example key":["ENUM","ENUM","INT","VARCHAR","TEXT","LIST","FOREIGN"],
				"INDEX":["key out into root"],
				"{{ANOTHER TABLE NAME, FOR MANY TO MANY}}":{
					"KEY":[...]
				}
			}
		}
    }
}
