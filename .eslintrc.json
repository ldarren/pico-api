{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"brace-style": "error",
        "eqeqeq": [
			"error",
			"smart"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never",
			{
				"beforeStatementContinuationChars": "always"
			}
		],
		"no-console": [
			"warn",
			{
				"allow": ["error", "log"]
			}
		],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "after-used",
				"ignoreRestSiblings": true
			}
		],
		"no-trailing-spaces": [
			"error",
			{
				"ignoreComments": true
			}
		],
		"no-unreachable": "warn",
		"no-fallthrough": "warn",
		"no-unused-vars": [
			"error", {
			"args": "none",
			"varsIgnorePattern": "_"
		}],
		"no-cond-assign": ["error", "except-parens"]
	}
}
